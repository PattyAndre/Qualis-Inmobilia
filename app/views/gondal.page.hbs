{{#content "scripts"}}
<script>
  $(".dpt-detail").slideUp();
  $(".dpt").click(function(){
    $(".dpt").removeClass("btn-primary").addClass("btn-secondary");
    $(this).removeClass("btn-secondary").addClass("btn-primary");
    var target = $("#"+ $(this).data("id"));
    $(".dpt-detail").not(target).slideUp(200)
    window.setTimeout(function(){
      target.slideDown();
    }, 200)
  });
</script>
